{
    "compilerOptions": {
      "target": "ES2020",                    
      "module": "CommonJS",                  
      "strict": true,                        
      "esModuleInterop": true,               
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "./dist",                    
      "rootDir": "./",                    
      "resolveJsonModule": true,
      "sourceMap": true                      
    },
    "include": ["./"],
    "exclude": ["node_modules", "dist"]
}  